<Page x:Class="EvickaWPF.BandDetail"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EvickaWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BandDetail">

    <Grid Background="White" Loaded="bandDetLoad">
        <ListView x:Name="contactListView" HorizontalAlignment="Left" Height="277" Margin="371,64,0,0" VerticalAlignment="Top" Width="400.000" Loaded="ListView_Loaded">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Jmeno" DisplayMemberBinding="{Binding fName}" Width="70"/>
                    <GridViewColumn Header="Prijemni" DisplayMemberBinding="{Binding lName}" Width="70"/>
                    <GridViewColumn Header="Pozice" DisplayMemberBinding="{Binding function}" Width="70"/>
                    <GridViewColumn Header="Telefon" DisplayMemberBinding="{Binding phone}" Width="90"/>
                    <GridViewColumn Header="Email" DisplayMemberBinding="{Binding email}" Width="90"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
